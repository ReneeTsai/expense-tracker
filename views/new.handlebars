<div class="row mt-5">
  <div class="col-md-6 m-auto" style="width: 600px">
      <h3 class="text-center">請輸入你的支出</h3>
      <div class="mb-4"><span class="text-danger">＊</span>必填欄位</div>

      <form action="/records/new" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">名稱<span class="text-danger">＊</span></label>
          <input type="text" id="name" name="name" class="form-control"/>
        </div>
        <div class="mb-3">
          <label for="date" class="mb-2">日期<span class="text-danger">＊</span></label>
          <input type="date" id="date" name="date" class="form-control"/>
        </div>
        <div class="mb-3">
          <label for="categoryId">類別<span class="text-danger">＊</span></label>
          <select id="categoryId" name="categoryId" class="form-control">
            <option value="">Select</option>
            {{#each categories}}
            <option value="{{ this._id }}">{{ this.name }}</option>
            {{/each}}
          </select>
        </div>
        <div class="mb-3">
          <label for="amount">金額<span class="text-danger">＊</span></label>
          <input type="amount" id="amount" name="amount" class="form-control"/>
        </div>
        <div class="d-flex justify-content-center mt-5">
          <button type="submit" class="btn btn-primary btn-block " style="width: 30%">新增支出</button>
        </div>
        
      </form>
    </div>
</div>