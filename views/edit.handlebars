<div class="d-flex m-5 justify-content-center">
  <form action="/records/{{record._id}}/edit" method="POST">
    <div class="d-flex justify-content-center">
      <label for="name">名稱：</label>
      <input type="text" placeholder="name" name="name" value="{{record.name}}" required /></div>
    <div class="d-flex justify-content-center">
      <label for="date">日期：</label>
      <input type="date" name="date" value="{{record.date}}" required />
    </div>
    <div class="d-flex justify-content-center">
      <label for="categoryId">類別</label>
      <select id="categoryId" name="categoryId" class="form-control">
        <option value="{{record.categoryId}}">{{record.category}}</option>
        {{#each categories}}
          <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="d-flex justify-content-center">
      <label for="amount">金額</label>
      <input type="number" name="amount" id="amount" min="0" value="{{record.amount}}" required />
    </div>

    <button type="submit">Save</button>
    <a href="/">back</a>
  </form>
</div>